<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panda_observe_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/rall_shap"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/culture_relat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rall_shap">


        <ImageView
            android:id="@+id/panda_culture_item_image"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="3dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/panda_culture_item_image"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/default_time_view" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginLeft="10dp"
            android:src="@drawable/play" />

        <TextView
            android:id="@+id/panda_oculture_item_sp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/panda_culture_item_image"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/play"
            android:layout_toRightOf="@+id/play"
            android:text="00:00:54"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/panda_culture_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/panda_culture_item_image"
            android:layout_toRightOf="@+id/panda_culture_item_image"
            android:lines="1"
            android:text="21331313"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/panda_culture_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/panda_culture_item_image"
            android:lines="2"
            android:text="1017-04-12"
            android:textColor="#383636"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="#d3d3d3" />
    </RelativeLayout>
</RelativeLayout>